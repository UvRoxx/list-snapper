# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/snaplist

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# AWS SES Configuration (Email Service)
AWS_REGION=ca-central-1
AWS_SES_ACCESS_KEY_ID=your-aws-access-key
AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_RATE_LIMIT_DB=1

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Server Configuration
NODE_ENV=production
PORT=5000
LOG_LEVEL=info
LOGS_DIR=./logs

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Application URLs
APP_URL=https://yourdomain.com
API_URL=https://yourdomain.com/api

# Feature Flags
ENABLE_EMAIL_QUEUE=true
ENABLE_RATE_LIMITING=true
ENABLE_SENTRY=true
ENABLE_CACHING=true

# Email Settings (Can be overridden by admin settings)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# Queue Settings
BULL_CONCURRENCY=5
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000

# Performance Settings
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
COMPRESSION_LEVEL=6

# Security Settings
CORS_ORIGIN=https://yourdomain.com
HELMET_CSP=true
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict